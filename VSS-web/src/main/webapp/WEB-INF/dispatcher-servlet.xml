    <bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <value>
                /index.htm=indexController
                /login.htm=loginController
                /registerAccountView.htm=registerAccountController
                /orderVideoView.htm=orderController
                /browseView.htm/*=browseController
                /browseView.htm=browseController
                /accessVideoOrders.htm=accessVideoController
                /viewVideo=viewVideoController
                /browseVideos.htm=browseVideoController
                /myAccountView.htm=myAccountController
                /shoppingCartView.htm=shoppingCartController
                /logout.htm=logoutController
            </value>
        </property>
    </bean>
    
    <bean id="viewResolver"
          class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/views/" />
        <property name="suffix" value=".jsp" />
    </bean>  
          
    <!-- Controller beans -->
    <bean name="indexController"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController"
          p:viewName="index" />
    <bean name="loginController" 
          class="com.team33.controllers.LoginController">
        <property name="successView" value = "loginSuccess"     />
        <property name="commandName" value = "account" />
        <property name="commandClass" value ="com.team33.entities.Account"/>
    </bean>
    <bean name = "registerAccountController"
          class = "com.team33.controllers.RegisterAccountController" >
        <property name="successView" value = "registerSuccess"     />
        <property name="commandName" value = "account" />
        <property name="commandClass" value ="com.team33.entities.Account"/>
    </bean>
    <bean name="browseVideoController"
        class="com.team33.controllers.BrowseVideosController">
        <property name="browseServiceImpl" ref="browseServiceImpl"/>
    </bean>
    <bean name = "viewVideoController"
          class = "com.team33.controllers.VideoViewController">
    </bean>
    <bean name="myAccountController"
          class = "com.team33.controllers.MyAccountController">
        <property name="videoAccessService" ref="videoAccessServiceImpl"/>
        <property name="accountService" ref="accountServiceImpl"/>
    </bean>
    <bean name="shoppingCartController"
          class = "com.team33.controllers.ShoppingCartController">
        <property name="browseService" ref="browseServiceImpl"/>
    </bean>
    <bean   name="logoutController"
            class = "com.team33.controllers.LogoutController">
    </bean>

    <bean id = "creditCardValidator" class = "com.team33.services.CreditCardValidator"/>
         
    <bean id = "orderServiceImpl" class = "com.team33.services.OrderServiceImpl">
        <property name = "creditCardValidator" ref = "creditCardValidator"/>
    </bean>
      
    <mvc:annotation-driven />
</beans>
